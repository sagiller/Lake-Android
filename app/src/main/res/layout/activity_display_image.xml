<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.capgemini.psclient.ui.customviews.movescaleimageview.MoveScaleImageView
        android:id="@+id/displayimage_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imageview_bg"/>

    <ImageView
        android:id="@+id/displayimage_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_32_to_dip"
        android:layout_marginTop="@dimen/px_38_to_dip"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/displayimage_takepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_14_to_dip"
        android:layout_marginRight="@dimen/px_34_to_dip"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/displayimage_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/displayimage_takepic"
        android:layout_toLeftOf="@id/displayimage_takepic"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible"/>
</RelativeLayout>